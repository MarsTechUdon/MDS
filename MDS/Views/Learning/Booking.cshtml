@model MDS.Models.lcourseModel
@{
    ViewBag.Title = "ตารางเรียน";
}
<style>
    .fc-event {
        font-size: 12px !important;
        cursor: pointer;
    }

    .ui-tabs-nav > li, .ui-tabs-nav > li > a {
        float: left !important;
    }

    .content-box-header > .ui-tabs-nav {
        left: 0 !important;
    }
</style>
