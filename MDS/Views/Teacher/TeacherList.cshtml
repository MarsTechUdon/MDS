                                }
                                else if (@Teacher.status.Equals("C"))
                                {
                                    <button class="btn btn-purple btn-md" data-toggle="modal" data-target="#recancleTeacher" data-id="@Teacher.ind" data-teachername="@Teacher.teachername">
