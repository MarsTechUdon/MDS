<h2>จัดการข้อมูลบัตรเครดิต</h2><br />
<div class="panel">
    <h3 class="content-box-header bg-blue-alt">
        <i class="glyph-icon icon-map-marker"></i>
        รายการข้อมูลบัตรเครดิต
        <div class="header-buttons">
            <button class="btn btn-sm btn-success pull-right" data-toggle="modal" data-target="#addComCreditcard">
                <i class="glyphicon glyphicon-plus"></i> เพิ่มข้อมูล</a>
            </button>
        </div>
    </h3><br />
    <div class="panel-body">
        <div class="example-box-wrapper">
            <table id="datatable-responsive22" class="table table-striped table-bordered responsive no-wrap" cellspacing="0" width="100%">
                <thead>
                    <tr>
                        <th class="text-center">ลำดับ</th>
                        <th class="text-center">ประเภทบัตร</th>
                        <th class="text-center">ค่าธรรมเนียม</th>
                        <th class="text-center">ชื่อบัตร</th>
                        <th class="text-center">สถานะ</th>
                        <th class="text-center">การจัดการ</th>
                    </tr>
                </thead>

                <tbody>
                    @{ int i = 0; }
                    @foreach (var ComCreditcard in Model)
                    {
                    <tr>
                        <td>@{ i = i + 1; } @i</td>
                        <td>@ComCreditcard.CrType</td>
                        <td>@ComCreditcard.CrCharge</td>
                        <td>@ComCreditcard.DisplayName</td>
                        <td class="text-center">
                            @if (@ComCreditcard.Status.Equals("A"))
                            {
                                <b style="color:green;">ได้รับการอนุญาต</b>
                            }
                            else if (@ComCreditcard.Status.Equals("C"))
                            {
                                <b style="color:red;">ไม้ได้รับการอนุญาต</b>
                            }
                        </td>

                        <td class="text-center">
                            @if (@ComCreditcard.Status.Equals("A"))
                            {

                                <button class="btn btn-warning btn-md" data-toggle="modal" data-target="#editComCreditcard" data-id="@ComCreditcard.Cid"
                                        data-crtype="@ComCreditcard.CrType" data-crcharge="@ComCreditcard.CrCharge" data-displayname="@ComCreditcard.DisplayName">
                                    <i class="glyph-icon icon-pencil-square-o"></i>
                                </button>

                                <button class="btn btn-danger btn-md" data-toggle="modal" data-target="#cancleComCreditcard" data-id="@ComCreditcard.Cid" data-displayname="@ComCreditcard.DisplayName">
                                    <i class="glyph-icon icon-trash"></i>
                                </button>
                            }
                            else if (@ComCreditcard.Status.Equals("C"))
                            {

                                <button class="btn btn-purple btn-md" data-toggle="modal" data-target="#recancleComCreditcard" data-id="@ComCreditcard.Cid" data-displayname="@ComCreditcard.DisplayName">
                                    <i class="glyph-icon icon-elusive-arrows-cw"></i>
                                </button>
                            }

                        </td>

                    </tr>
                    }
                </tbody>
            </table>

        </div>
    </div>
</div>

<!-- Data tables -->
<script type="text/javascript" src="~/assets/widgets/datatable/datatable.js"></script>
<script type="text/javascript" src="~/assets/widgets/datatable/datatable-bootstrap.js"></script>
<script type="text/javascript" src="~/assets/widgets/datatable/datatable-responsive.js"></script>
<script>
    /* Datatables responsive */
    $(document).ready(function () {
        $('#datatable-responsive22').DataTable({
            responsive: true
        });
    });

    $(document).ready(function () {
        $('.dataTables_filter input').attr("placeholder", "Search...");
    });
</script>

<script type="text/javascript">
    //aleat
    $(document).ready(function () {
        $("#success-alert").hide();
        $("#success-alert").fadeTo(2000, 500).slideUp(500, function () {
            $("#success-alert").slideUp(500);
        });
    });
    //modal edit ComCreditcard
    $(document).ready(function () {
        $('#editComCreditcard').on('show.bs.modal', function (event) {
            var button = $(event.relatedTarget);

            var id = button.data('id');
            var CrType = button.data('crtype');
            var CrCharge = button.data('crcharge');
            var DisplayName = button.data('displayname');

            var modal = $(this);
            modal.find('#e_ComCreditcard_id').val(id);
            modal.find('#e_ComCreditcard_CrType').val(CrType);
            modal.find('#e_ComCreditcard_CrCharge').val(CrCharge);
            modal.find('#e_ComCreditcard_DisplayName').val(DisplayName);

        });
    });
    //modal cancle ComCreditcard
    $(document).ready(function () {
        $('#cancleComCreditcard').on('show.bs.modal', function (event) {
            var button = $(event.relatedTarget);

            var id = button.data('id');
            var DisplayName = button.data('displayname');

            var modal = $(this);
            modal.find('#ca_ComCreditcard_id').val(id);
            // modal.find('#ca_ComCreditcard_ComCreditcardname').val(ComCreditcardName);
            document.getElementById("ca_ComCreditcard_ComCreditcardname").innerHTML = DisplayName;

        });
    });

    //modal re-cancle ComCreditcard
    $(document).ready(function () {
        $('#recancleComCreditcard').on('show.bs.modal', function (event) {
            var button = $(event.relatedTarget);

            var id = button.data('id');
            var DisplayName = button.data('displayname');

            var modal = $(this);
            modal.find('#re_ca_ComCreditcard_id').val(id);
            // modal.find('#ca_ComCreditcard_ComCreditcardname').val(ComCreditcardName);
            document.getElementById("re_ca_ComCreditcard_ComCreditcardname").innerHTML = DisplayName;

        });
    });

</script>


