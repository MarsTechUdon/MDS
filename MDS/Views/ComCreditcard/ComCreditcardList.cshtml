@model List<MDS.Models.ComCreditcardModel>
@{
    ViewBag.Title = "บัตรเครดิต";
}

<link rel="stylesheet" type="text/css" href="~/assets/widgets/datatable/datatable.css">


@if (ViewBag.boolResult == "Y" && ViewBag.msg != null)
{
    <div class="alert alert-success" id="success-alert">
        <div class="bg-green alert-icon">
            <i class="glyph-icon icon-check"></i>
        </div>
        <div class="alert-content">
            <h4 class="alert-title">แจ้งเตือน!</h4>
            <p>@ViewBag.msg</p>
        </div>
    </div>
}
else if (ViewBag.boolResult == "N")
{
    <div class="alert alert-danger" id="success-alert">
        <div class="bg-red alert-icon">
            <i class="glyph-icon icon-times"></i>
        </div>
        <div class="alert-content">
            <h4 class="alert-title">แจ้งเตือน!</h4>
            <p>@ViewBag.msg</p>
        </div>
    </div>
}


<!---add--->
<div class="modal fade" id="addComCreditcard" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header ">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h4 class="modal-title">เพิ่มข้อมูล</h4>
            </div>
            <div class="modal-body">

                @using (Html.BeginForm("AddComCreditcard", "ComCreditcard", FormMethod.Post))
                {
                    @*<div class="form-group">*@
                    <div class="row">
                        <label class="col-sm-1"></label> <label class="col-sm-11 control-label text-left">ประเภทบัตรเครดิต <b style="color:red;">*</b></label>
                    </div>
                    <div class="row">
                        <label class="col-sm-1 col-xs-1"></label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" placeholder="ประเภทบัตรเครดิต..." name="CrType" required>
                        </div>
                    </div>

                    <div class="row">
                        <label class="col-sm-1"></label> <label class="col-sm-11 control-label text-left">ค่าธรรมเนียม <b style="color:red;">*</b></label>
                    </div>
                    <div class="row">
                        <label class="col-sm-1 col-xs-1"></label>
                        <div class="col-sm-10">
                            <input type="number" class="form-control" placeholder="ค่าธรรมเนียม..." name="CrCharge" required>
                            <p style="color:red;font-size:12px;">กรอกข้อมูล "ค่าธรรมเนียม" เป็นตัวเลข</p>
                        </div>
                    </div>

                    <div class="row">
                        <label class="col-sm-1"></label> <label class="col-sm-11 control-label text-left">ชื่อบัตร <b style="color:red;">*</b></label>
                    </div>
                    <div class="row">
                        <label class="col-sm-1 col-xs-1"></label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" placeholder="ชื่อบัตร..." name="DisplayName" required>
                        </div>
                    </div>
                    <br>
                    @*</div>*@
                    <div class="modal-footer">
                        <button type="submit" class="btn btn-success">เพิ่มข้อมูล</button>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
<!---end add--->
